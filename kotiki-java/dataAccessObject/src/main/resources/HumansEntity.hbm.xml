<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.itmo.kotiki.entity.HumansEntity" table="humans" schema="public" catalog="kotiki">
        <id name="humanId">
            <column name="human_id" sql-type="integer"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar" not-null="true"/>
        </property>
        <property name="birthday">
            <column name="birthday" sql-type="date"/>
        </property>
        <set name="catsByHumanId" inverse="true">
            <key>
                <column name="human_id"/>
            </key>
            <one-to-many not-found="ignore" class="com.itmo.kotiki.entity.CatsEntity"/>
        </set>
    </class>
</hibernate-mapping>